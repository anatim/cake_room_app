<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    android:background="@color/colorLightGreyBackground"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imgVwShopNow"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_below="@+id/imgVwLogo"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:srcCompat="@drawable/main2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/btnShopNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgVwShopNow"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorRaspberry"
        android:onClick="goToGallery"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="@string/btn_shop_now"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLoginDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnShopNow"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/btnRegister"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:onClick="goToLogin"
                android:padding="5dp"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btnShopNow"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:onClick="goToRegister"
                android:padding="5dp"
                android:text="@string/register"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginDialog"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:onClick="goToOurStores"
                android:padding="5dp"
                android:text="@string/stores"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry" />

            <Button
                android:id="@+id/btnLoyalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnStores"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:padding="5dp"
                android:onClick="goToLoyalty"
                android:text="@string/loyalty"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry" />

            <Button
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/btnPromo"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:onClick="goToContactUs"
                android:padding="5dp"
                android:text="CONTACT US"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry" />

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/btnContact"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:onClick="goToAboutUs"
                android:padding="5dp"
                android:text="@string/about"
                android:textAlignment="center"
                android:textColor="@color/colorRaspberry" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>



